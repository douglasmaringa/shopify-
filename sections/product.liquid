<div class="min-h-screen container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-2">{{ product.title }}</h1>
  <p class="text-lg font-bold text-green-600">{{ product.price | money }}</p>

  <div class="my-4">
    <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" class="mb-4 rounded-lg">

    {{ product.description | markdownify }}
  </div>

  <form action="/cart/add" method="post" class="mb-4">
    <select name="id" id="variant_id" class="bg-white border border-gray-300 p-2 rounded-md">
      {% for variant in product.variants %}
        <option value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
      {% endfor %}
    </select>

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md">Add to Cart</button>
  </form>
</div>

{% schema %}
{
  "name": "product",
  "tag": "section",
  "class": "product",
  "settings": [],
  "presets": [{ "name": "default-product" }]
}
{% endschema %}
