{% form 'cart' , cart %}
<h1>cart page</h1>

{% for item in cart.items %}
    <div>
       <img src="{{ item.image | image_url: width: 200 }}"/>
         <h2>{{ item.title }}</h2>
       <h2>{{ item.price }}</h2>
       <a href="{{ item.url_to_remove }}">Remove</a>
    </div>
{% endfor %}
<hr/>
<h2>Total: {{ cart.total_price }}</h2>

<button type="submit" name="checkout">
    Checkout
</button>

{% endform %}
